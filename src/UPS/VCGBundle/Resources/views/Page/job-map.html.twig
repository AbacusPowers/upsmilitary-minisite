{% extends "VCGBundle:Layouts:page.html.twig" %}
{% block title %}Career Explorer{% endblock %}
{% block javascripts %}
    {#{% javascripts
        '@VCGBundle/Resources/public/js/vendor/Snap.svg/dist/snap.svg.js'
        '@VCGBundle/Resources/public/js/job-map/job-map.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}#}
    {% javascripts
        '@VCGBundle/Resources/public/js/job-map/jquery.jvectormap.min.js'
        '@VCGBundle/Resources/public/js/job-map/jquery.jvectormap.us-merc-en.js'
        '@VCGBundle/Resources/public/js/job-map/job-map.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block headerimage %}
    <div class="header-static-bg">
        <img class="header-static-bg-img" src="{{ asset('bundles/vcg/images/slider/photo-3.png') }}" />
    </div>
{% endblock %}
{% block breadcrumbs %}
        <a href="{{ path('page',{'slug':'job-map'}) }}">UPS Jobs Map</a>
{% endblock %}

{% block page_content %}
    <div class="veteranGateway__liner">
        <div class="page--map">
            <div class="title-block">
                <h1>UPS Jobs Map</h1>
                <p>Showing UPS locations &amp; types of jobs</p>
            </div>
            <nav class="nav--career-explorer">
                <a href="{{ path('page',{'slug':'military-skills-translator'}) }}" >
                    {#<img src="{{ asset('bundles/vcg/images/lightbulb.png') }}" class="" alt="">#}
                    {% include 'VCGBundle:Svgs:jobs-lightbulb.svg.twig' %}
                    <span class="caption">Skills</span>
                </a>
                <a href="{{ path('page',{'slug':'jobs'}) }}">
                    {#<img src="{{ asset('bundles/vcg/images/handshake.png') }}" class="" alt="">#}
                    {% include 'VCGBundle:Svgs:jobs-handshake.svg.twig' %}
                    <span class="caption">Jobs</span>
                </a>
                <a href="{{ path('page',{'slug':'job-map'}) }}" class="current-page">
                    {#<img src="{{ asset('bundles/vcg/images/bubbles.png') }}" class="" alt="">#}
                    {% include 'VCGBundle:Svgs:jobs-map-pin.svg.twig' %}
                    <span class="caption">Map</span>
                </a>
            </nav>
            <div id="side--a" class="full-width">
                <section class="map-wrapper">
                    <div class="">
                        <a id="job-map--refresh" class="hidden"><i class="fa fa-undo"></i></a>
                        <!-- <h1 data-info="name"></h1> -->
                    </div>
                    <div id="map-container"></div>
                </section>
                
            </div>
           
            <div id="side--b" class="pseudo-block--hidden">
                 <section class="map-controls hidden full-width">
                    <form action="javascript:void">
                        <div>

                            <label for="job-map--select-state"><h1>Click On the Map or Select Your State</h1></label>
                            <select id="job-map--select-state" name="job-map--select-state"></select>
                        </div>
                    </form>
                </section>
                <div class="map-info-container hidden">
                    <div class="map-info--state">
                        <div class="size-key">
                            <h3>KEY</h3>
                            <ul>
                                <li><i class="fa fa-circle"></i>&nbsp;Large Facility</li>
                                <li><i class="fa fa-circle"></i>&nbsp;Medium Facility</li>
                            </ul>
                        </div>
                        <h1 data-info="name"></h1>
                        <!-- <p><span data-info="count"></span> Cities</p> -->
                        <div class="component--expander expander__thin" data-info="cities">
                            <section class='expander__wrapper'>
                                <a data-id=' ' class='button expand-button'>
                                    <ul class="city-label">
                                        <li><h2 class='expander__parent' data-info="city-name"></h2></li>
                                        <li><span>(<span data-info="city-count"></span>)</span></li>
                                    </ul>
                                    <i class="fa fa-plus fa-2x"></i>
                                </a>
                                {#<a data-id=' ' class='button hide-button'><i class="fa fa-minus fa-2x"></i></a>#}
                                <div data-id=' ' class='hidden-part'>
                                    <div class="expander__child">
                                        <div class="component--expander" data-info="locations">
                                            <section class="expander__wrapper">
                                                <a data-id=' ' class='button expand-button'>
                                                    <h2 class="expander__parent" data-info="loc-name"></h2>
                                                    <h3><span data-info="loc-count"></span>&nbsp;Job Types</h3>
                                                    <i class="fa fa-plus fa-2x"></i>
                                                </a>
                                                {#<a data-id=' ' class='button hide-button'><i class="fa fa-minus fa-2x"></i></a>#}
                                                <div data-id=' ' class='hidden-part'>
                                                    <div class="expander__child" data-info="jobs">
                                                    </div>
                                                </div>
                                            </section>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
