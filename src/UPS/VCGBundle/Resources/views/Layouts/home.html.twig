                        {% include 'VCGBundle:GridItems:ups-culture.html.twig' %}
                        {% include 'VCGBundle:GridItems:announcements.html.twig' %}
                        {% include 'VCGBundle:GridItems:events.html.twig' %}
                        {% include 'VCGBundle:GridItems:social.html.twig' %}
                    </div>
                </div>           
            </div>    
{% endblock %}