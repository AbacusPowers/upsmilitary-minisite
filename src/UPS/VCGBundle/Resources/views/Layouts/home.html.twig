{% extends "VCGBundle::base.html.twig" %}

{% block title %}{{ title }}{% endblock %}
{% block headerimage %}
    <div class="carousel">
        <div class="carousel-inner">
            <input class="carousel-open" type="radio" id="carousel-1" name="carousel" aria-hidden="true" hidden="" checked="checked">
            <div class="carousel-item">
                <img src="http://fakeimg.pl/2000x800/0079D8/fff/?text=Without">
            </div>
            <input class="carousel-open" type="radio" id="carousel-2" name="carousel" aria-hidden="true" hidden="">
            <div class="carousel-item">
                <img src="http://fakeimg.pl/2000x800/DA5930/fff/?text=JavaScript">
            </div>
            <input class="carousel-open" type="radio" id="carousel-3" name="carousel" aria-hidden="true" hidden="">
            <div class="carousel-item">
                <img src="http://fakeimg.pl/2000x800/F90/fff/?text=Carousel">
            </div>
            <label for="carousel-3" class="carousel-control prev control-1">&lsaquo;</label>
            <label for="carousel-2" class="carousel-control next control-1">&rsaquo;</label>
            <label for="carousel-1" class="carousel-control prev control-2">&lsaquo;</label>
            <label for="carousel-3" class="carousel-control next control-2">&rsaquo;</label>
            <label for="carousel-2" class="carousel-control prev control-3">&lsaquo;</label>
            <label for="carousel-1" class="carousel-control next control-3">&rsaquo;</label>
            <ol class="carousel-indicators">
                <li>
                    <label for="carousel-1" class="carousel-bullet">&bull;</label>
                </li>
                <li>
                    <label for="carousel-2" class="carousel-bullet">&bull;</label>
                </li>
                <li>
                    <label for="carousel-3" class="carousel-bullet">&bull;</label>
                </li>
            </ol>
        </div>
    </div>
{% endblock %}
{% block page_content %}
    <div class="pattern--get-started get-started--header">
                <p>Get started with your career at UPS</p>
                <div class="button">Go <i class="fa fa-chevron-right"></i></div>
            </div>


            <!-- <nav><a href="">Military Transition Guide</a><a href="">UPS Careers</a></nav> -->
            <div class="veteranGateway__liner">
                <div class="title-block">
                    <h1>Career Gateway</h1>
